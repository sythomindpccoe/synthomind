                        <div class="document-item">
                            <div class="document-icon">
                                <i class="fas fa-file-image"></i>
                            </div>
                            <div class="document-info">
                                <h4>UI Mockups.fig</h4>
                                <p>Updated today by Priya</p>
                            </div>
                            <div class="document-actions">
                                <button class="doc-action-btn">
