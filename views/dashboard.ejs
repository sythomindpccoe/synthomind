            <!-- Recent Documents Section -->
            <section class="dashboard-card documents-card">
                <div class="card-header">
                    <h2><i class="fas fa-file-alt"></i> Recent Documents</h2>
                    <a href="hackathon.html" class="view-all">View All <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="card-content">
                    <div class="documents-list">
                        <!-- Document Item -->
                        <div class="document-item">
                            <div class="document-icon">
                                <i class="fas fa-file-pdf"></i>
                            </div>
                            <div class="document-info">
                                <h4>Project Requirements.pdf</h4>
                                <p>Updated 2 days ago by Sarah</p>
                            </div>
                            <div class="document-actions">
                                <button class="doc-action-btn">
                                    <i class="fas fa-download"></i>
                                </button>
                                <button class="doc-action-btn">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Document Item -->
                        <div class="document-item">
                            <div class="document-icon">
                                <i class="fas fa-file-code"></i>
                            </div>
                            <div class="document-info">
                                <h4>API Documentation.md</h4>
                                <p>Updated yesterday by David</p>
                            </div>
                            <div class="document-actions">
                                <button class="doc-action-btn">
