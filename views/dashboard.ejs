    <!-- Add Update Modal -->
    <div class="modal" id="update-modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <div class="modal-header">
                <h2>Add Daily Update</h2>
            </div>
            <div class="modal-body">
                <form id="update-form">
                    <div class="form-group">
                        <label for="update-content">What did you work on today?</label>
                        <textarea id="update-content" rows="5" placeholder="Share your progress with the team..."></textarea>
                    </div>
                    <div class="form-group">
                        <label>Attachments (optional)</label>
                        <div class="file-upload">
                            <input type="file" id="update-files" multiple>
                            <label for="update-files" class="upload-btn">
                                <i class="fas fa-cloud-upload-alt"></i> Choose Files
                            </label>
                            <span class="file-names">No files selected</span>
                        </div>
                    </div>
                    <button type="submit" class="submit-btn">Post Update</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Task Modal -->
    <div class="modal" id="task-modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <div class="modal-header">
                <h2>Add New Task</h2>
            </div>
            <div class="modal-body">
                <form id="task-form">
                    <div class="form-group">
                        <label for="task-title">Task Title</label>
                        <input type="text" id="task-title" placeholder="Enter task title">
                    </div>
                    <div class="form-group">
                        <label for="task-description">Description</label>
                        <textarea id="task-description" rows="3" placeholder="Enter task description"></textarea>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="task-due">Due Date</label>
                            <input type="date" id="task-due">
                        </div>
                        <div class="form-group">
                            <label for="task-assign">Assign To</label>
                            <select id="task-assign">
                                <option value="alex">Alex Morgan</option>
                                <option value="sarah">Sarah Johnson</option>
                                <option value="mike">Mike Chen</option>
                                <option value="priya">Priya Patel</option>
                                <option value="david">David Kim</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="task-priority">Priority</label>
                        <div class="priority-options">
                            <label class="priority-option">
                                <input type="radio" name="priority" value="low" checked>
                                <span class="priority-tag low">Low</span>
                            </label>
                            <label class="priority-option">
                                <input type="radio" name="priority" value="medium">
                                <span class="priority-tag medium">Medium</span>
                            </label>
                            <label class="priority-option">
                                <input type="radio" name="priority" value="high">
                                <span class="priority-tag high">High</span>
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="submit-btn">Add Task</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/dashboard.js"></script>
</body>
